generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  WORKER
  CITIZEN
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String   @unique
  password  String 
  age       Int?
  gender    String?
  role      Role     @default(CITIZEN)
  createdAt DateTime @default(now())
}

